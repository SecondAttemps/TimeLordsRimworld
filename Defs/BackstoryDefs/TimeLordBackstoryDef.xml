<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <AlienRace.BackstoryDef>
  <defName>TimeLordRenegade</defName>
  <title>Renegade Time Lord</title>
  <titleshort>Renegade</titleshort>
  <baseDescription>NAME is a Renegade of the Time Lords, having fled Gallifrey for their own purposes</baseDescription>
  <bodyTypeMale>Male</bodyTypeMale>
  <bodyTypeFemale>Female</bodyTypeFemale>
  <slot>Adulthood</slot>
  <spawnCategories>
    <li>TimeLordBackstory</li>
  </spawnCategories>
  <skillGains>
    <li>
	  <defName>Social</defName>
	  <amount>3</amount>
	</li>
	<li>
	  <defName>Shooting</defName>
	  <amount>3</amount>
	</li>
	<li>
	  <defName>Melee</defName>
	  <amount>3</amount>
	</li>
	<li>
	  <defName>Medicine</defName>
	  <amount>3</amount>
	</li>
	<li>
	  <defName>Cooking</defName>
	  <amount>3</amount>
	</li>
	<li>
	  <defName>Growing</defName>
	  <amount>3</amount>
	</li>
	<li>
	  <defName>Artistic</defName>
	  <amount>3</amount>
	</li>
	<li>
	  <defName>Crafting</defName>
	  <amount>3</amount>
	</li>
	<li>
	  <defName>Intellectual</defName>
	  <amount>5</amount>
	</li>
   </skillGains>
  <forcedTraits>
   <li>
    <defName>FastLearner</defName>
    <chance>100</chance>
   </li>
  </forcedTraits> 
 </AlienRace.BackstoryDef>
 
  <AlienRace.BackstoryDef>
   <defName>TimeLordExile</defName>
   <title>Exiled Time Lord</title>
   <titleshort>Exile</titleshort>
   <baseDescription>Exiled for Deeds considered criminal and barbaric, NAME has been forced to leave their home</baseDescription>
   <bodyTypeMale>Male</bodyTypeMale>
   <bodyTypeFemale>Female</bodyTypeFemale>
   <slot>Adulthood</slot>
   <spawnCategories>
     <li>TimeLordBackstory</li>
   </spawnCategories>
   <skillGains>
    <li>
	   <defName>Shooting</defName>
	   <amount>5</amount>
	</li>
	<li>
	   <defName>Melee</defName>
	   <amount>5</defName>
	</li>
	<li>
	   <defName>Intellectual</defName>
	   <amount>5</amount>
	</li>
   </skillGains>
   <forcedTraits>
     <li>
	   <defName>Abrasive</defName>
	   <chance>75</chance>
     </li>
	 <li>
	   <defName>Psychopath</defName>
	   <chance>75</chance>
	 </li>
	 <li>
	   <defName>Pyromaniac</defName>
	   <chance>20</chance>
	 </li>
   </forcedTraits>
 </AlienRace.BackstoryDef>
 
  <AlienRace.BackstoryDef>
   <defName>TimeLordScholar</defName>
   <title>Time Lord Scholar</title>
   <titleshort>Scholar</titleshort>
   <baseDescription>NAME is a scholar in Time Lord Society, having spent much of their life reading tomes</baseDescription>
   <bodyTypeMale>Male</bodyTypeMale>
   <bodyTypeFemale>Female</bodyTypeFemale>
   <slot>Adulthood</slot>
   <spawnCategories>
     <li>TimeLordBackstory</li>
   </spawnCategories>
   <skillGains>
     <li>
	   <defName>Intellectual</defName>
	   <amount>7</amount>
	 </li>
	 <li>
	   <defName>Medicine</defName>
	   <amount>2</amount>
	 </li>
	 <li>
	   <defName>Social</defName>
	   <amount>-2</defName>
	 </li>
	</skillGains>
	<forcedTraits>
	  <li>
	    <defName>Ascetic</defName>
		<chance>50</defName>
	  </li>
	  <li>
	    <defName>Wimp</defName>
		<chance>50</chance>
	  </li>
	</forcedTraits>
	<workDisables>
	  <li>Mining</li>
	  <li>Construction</li>
	  <li>Violent</li>
	</workDisables>
	<bioAgeRange>
	  <min>200</min>
	</bioAgeRange>
	</AlienRace.BackstoryDef>
	
