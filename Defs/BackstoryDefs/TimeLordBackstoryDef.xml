     <li>
	   <defName>Medicine</defName>
	   <amount>5</amount>
	 </li>
	 <li>
	   <defName>Social</defName>
	   <amount>2</amount>
	 </li>
	</skillGains>
  </AlienRace.BackstoryDef>
  
  <AlienRace.BackstoryDef>
    <defName>Infantry</defName>
    <title>Infantry Soldier of the Time Lord army</title>
	<titleshort>Infantry Soldier</titleshort>
    <baseDescription>A infantry soldier in the army of the Time Lords, at the front lines of the sparse conflicts Time Lords become part of</baseDescription>
    <bodyTypeMale>Male</bodyTypeMale>
    <bodyTypeFemale>Female</bodyTypeFemale>
    <slot>Adulthood</slot>
    <spawnCategories>TimeLordBackstory</spawnCategories>
   <skillGains>
     <li>
       <defName>Shooting</defName>
       <amount>4</amount>
     </li>
     <li>
       <defName>Melee</defName>
	   <amount>2</amount>
     </li>
    </skillGains>
    <forcedTraits>
      <li>
        <defName>ShootingAccuracy</defName>
        <degree>1</degree>
        <chance>65</chance>
      </li>
      <li>
        <defName>ShootingAccuracy</defName>
        <degree>-1</degree>	
        <chance>35</chance>
      </li>
	</forcedTraits>
	 <bioAgeRange>
	   <min>120</min>
	 </bioAgeRange>
  </AlienRace.BackstoryDef>
  
