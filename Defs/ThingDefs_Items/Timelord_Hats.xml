<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="HatBase" ParentName="ApparelBase" Abstract="True">
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
  </ThingDef>

  <ThingDef Name="HatMakeableBase" ParentName="ApparelMakeableBase" Abstract="True">
    <thingCategories>
      <li>Headgear</li>
