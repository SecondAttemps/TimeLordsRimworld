  </ThingDef>
  
  <ThingDef ParentName="HatMakeableBase">
    <defName>Apparel_Timelord_Skullcap</defName>
    <label>skullcap</label>
    <description>commonly adorned headwear of the Time Lords of Gallifrey</description>
    <graphicData>
      <texPath>Outfits/Timelord/Skullcap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>1500</WorkToMake>
      <Mass>0.07</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Cold>-10</Insulation_Cold>
      <Insulation_Heat>-2</Insulation_Heat>
    </statBases>
		<generateCommonality>0.5</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <worngraphicPath>Outfits/Timelord/Skullcap</worngraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Timelord</li>
      </tags>
      <defaultOutfitTags>
        <li>Timelord</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>RGBA(0.3,0.3,0.3,1)</min>
          <max>RGBA(0.5,0.5,0.5,1)</max>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.9,0.9,0.9,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  
